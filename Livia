/* style.css */ body { background-color: white; color: red; font-family: Arial, sans-serif; text-align: center; margin: 0; padding: 0; } .container { max-width: 800px; margin: 20px auto; padding: 20px; background: #fff; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); } .popup { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: rgba(255, 255, 255, 0.9); padding: 20px; border-radius: 15px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); font-size: 24px; color: red; font-weight: bold; text-align: center; } #error-message { color: red; font-size: 14px; display: none; }

/* script.js */ function showPopup() { document.getElementById("popup").style.display = "block"; setTimeout(function() { document.getElementById("popup").style.display = "none"; }, 3000); } function checkPassword() { var password = document.getElementById("password").value; if (password === "Livia2025") { document.getElementById("password-container").style.display = "none"; document.getElementById("content").style.display = "block"; } else { var errorMessage = document.getElementById("error-message"); errorMessage.innerText = "Senha incorreta! Tente novamente."; errorMessage.style.display = "block"; } } window.onload = function() { showPopup(); };

